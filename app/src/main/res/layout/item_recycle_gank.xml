<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_gank_img"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            app:srcCompat="@android:color/darker_gray"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_gank_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_gank_img"
            android:layout_toStartOf="@+id/iv_gank_img"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/tv_gank_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            tools:text="佚名"/>

        <TextView
            android:id="@+id/tv_gank_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tv_gank_author"
            android:layout_toRightOf="@+id/tv_gank_author"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            tools:text="2012-10-12"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>